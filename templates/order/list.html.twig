{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
    <main class="mt-4 order-js-filter">
        <div class="row mt-5">
            <aside class="col-2">
                {% include 'order/_filter.html.twig' with {form: form} only %}
            </aside>
            <article class="col-10">
                <div class="row mb-3">
                    <div class="col-3">
                        <h3>Liste des Commandes</h3>
                    </div>
                    <div class="col-2">
                        <a class="btn btn-primary btn-sm" href="{{ path('order_new') }}" role="button">Nouvelle commande</a>
                    </div>
                </div>
                <div>
                    {% include 'order/_orderList.html.twig' with {orders: orders} only %}
                </div>
                <div class="js-filter-pagination">
                    {% include 'order/_pagination.html.twig' %}
                </div>
            </article>
        </div>
    </main>

{% endblock %}
