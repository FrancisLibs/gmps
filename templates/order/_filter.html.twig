<div>
    <h3 class="mx-auto mb-2" style="width: 80px; color: #ffff;">Filtres</h3>
    {{ form_start(form, {attr: {class: 'filter js-filter-form'}}) }}
        <div class="mt-2 d-flex">
            <div class="filterbtn">
                {{ form_row(form.numero)}}
            </div>
            <div>
                <button class="resetBtn">Reset</button>
            </div>
        </div>
        <div class="mt-2 d-flex">
            <div class="filterbtn">
                {{ form_row(form.provider)}}
            </div>
            <div>
                <button class="resetBtn">Reset</button>
            </div>
        </div>
        <div class="mt-2 d-flex">
            <div class="filterbtn">
                {{ form_row(form.user)}}
            </div>
            <div>
                <button class="resetBtn">Reset</button>
            </div>
        </div>
        <div class="mt-2 d-flex">
            <div class="filterbtn">
                {{ form_row(form.designation)}}
            </div>
            <div>
                <button class="resetBtn">Reset</button>
            </div>
        </div>
        <div class="mt-2 border border-primary rounded px-1">
            <h5>Compte</h5>
            {{ form_row(form.account)}}
        </div>
        <div class="mt-2 border border-primary rounded px-1">
            <h5>Statut</h5>
            {{ form_row(form.status)}}
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-primary w-100">Filtrer</button>
        </div>
        
    {{ form_end(form) }}
</div>