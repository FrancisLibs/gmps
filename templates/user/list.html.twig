{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <main class="mt-4 user-js-filter">
        <div class="row mt-5">
            <aside class="col-2 mt-5">
                {% include 'user/_filter.html.twig' with {form: form} only %}
            </aside>
            <article class="col-10">
                <div class="row align-items-center">
                    <div class="col-3">
                        <h3>Liste des Utilisateurs</h3>
                    </div>
                    <div class="col-2">
                        <a class="btn btn-primary btn-sm" href="{{ path('user_new') }}" role="button">Nouvel utilisateur</a>
                    </div>
                </div>
                <div class="mt-5">
                    {% include 'user/_userList.html.twig' with {users: users} only %}
                </div>
                <div class="js-filter-pagination">
                    {% include 'user/_pagination.html.twig' %}
                </div>
            </article>
        </div>
    </main>

{% endblock %}
